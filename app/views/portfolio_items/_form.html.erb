
<%= simple_form_for(@portfolio_item) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :name, label: false, placeholder: 'Title of project' %>
    <%= f.input :description, label: false, placeholder: 'Description of project', input_html: { rows:5 }  %>
    <%= f.input :image, label: false, placeholder: 'Upload Image'%>
    <%= f.input :date_completed, label: false, placeholder: 'Date project completed' %>

  </div>

  <div class="form-actions">
    <%= f.submit "Create new portfolio", class:'btn btn-outline-success btn-sm' %>
  </div>
<% end %>
